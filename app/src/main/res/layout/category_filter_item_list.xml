<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:weightSum="10"
    android:padding="5dp"
    android:layout_height="60dp">

    <TextView
        android:id="@+id/categoryName"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:fontFamily="@font/josefinsans"
        android:text="Daily needs"
        android:gravity="center_vertical"
        android:textSize="20sp"
        android:textColor="#85929E"
        android:paddingStart="5dp"
        android:layout_weight="9" />

    <net.igenius.customcheckbox.CustomCheckBox
        android:id="@+id/categorySwitch"
        android:layout_width="0dp"
        app:color_checked="@color/colorPrimary"
        app:color_tick="#fff"
        app:small_tick="true"
        app:color_unchecked_stroke="@color/colorPrimary"
        android:layout_weight="1"
        android:layout_marginEnd="10dp"
        android:layout_height="match_parent"
        android:checked="false"/>

</LinearLayout>